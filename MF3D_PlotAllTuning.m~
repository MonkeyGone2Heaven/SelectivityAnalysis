

%================== Plot head orientation, depth, and expression tuning


Subject     = 'Avalanche';
Dates      	= {'20160627','20160627','20160701'};
Channels  	= [100, 89, 125, 123];
Cell        = 1;


Subejct     = 'Matcha';
Dates       = {'20160613','20160614','20160615','20160616','20160617',};



Output      = 'gif';


for d = 1:numel(Dates)
    for ch = 1:numel(Channels)
        if d <= 3
            MF3D_PlotResponses_Orientations(Subject, Dates{d}, Channels(ch), Cell, Output);
        elseif ismember(d,[4,5])
            MF3D_PlotResponses_Expressions(Subject, Dates{d}, Channels(ch), Cell, Output);
            MF3D_PlotResponses_Depth(Subject, Dates{d}, Channels(ch), Cell, Output);
        elseif ismember(d,[6,7,8]);
            
        end
    end
end